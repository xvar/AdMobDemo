<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|top"
    android:id="@+id/dummy_relativeLayout"
    android:visibility="invisible">

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/dummy_wrapper">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dummy_imageView"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/dummyTitle_textView"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/dummyDescription_textView"
            android:textSize="14sp"
            android:textColor="@color/icons_dark"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dummyButton_button"
            android:textColor="@color/white"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"/>
    </LinearLayout>



</RelativeLayout>